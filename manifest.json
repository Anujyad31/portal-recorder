{
  "manifest_version": 3,
  "name": "User Journey Recorder",
  "version": "1.0",
  "description": "Capture screen, network logs, and console logs of a website.",
  "permissions": [
    "tabs",
    "activeTab",
    "tabCapture",
    "scripting",
    "webRequest",
    "debugger",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}