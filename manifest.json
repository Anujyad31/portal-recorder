{
  "manifest_version": 3,
  "name": "User Journey Recorder",
  "version": "1.0",
  "description": "Capture screen, network logs, and console logs of a website.",
  "permissions": [
    "tabCapture",
    "tabs",
    "activeTab",
    "scripting",
    "downloads",
    "storage",
    "debugger"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/jszip.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}